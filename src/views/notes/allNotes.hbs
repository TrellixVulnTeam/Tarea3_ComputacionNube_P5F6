<div class="row">
    {{#each notes}}
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{ titulo }} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                    </h4>
                    <p>{{descripcion}}</p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger col-12 btn-sm">Eliminar</button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>